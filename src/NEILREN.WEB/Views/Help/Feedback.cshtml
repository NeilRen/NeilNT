@{
    Layout = "~/Views/Shared/_NEILRENLayout.cshtml";
}


<ul class="breadcrumb">
    <li><a href="/">首页</a></li>
    <li>@Html.ActionLink("帮助", "", "Help", new { }, new { })</li>
    <li class="active">反馈</li>
</ul>

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> 反馈</h2>
</div>
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            @using (Html.BeginForm())
                            {
                                <div class="panel panel-colorful">
                                    <div class="panel-body">
                                        <h2>Contact</h2>
                                        <p>Feel free to contact us for any issues you might have with our products.</p>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">反馈类型</label>
                                            <div class="col-md-10">
                                                <label class="switch">
                                                    <input type="radio" name="switch-radio1" checked="" value="0">
                                                    <span>建议</span>
                                                </label>
                                                <label class="switch">
                                                    <input type="radio" name="switch-radio1" value="1">
                                                    <span>问题</span>
                                                </label>
                                                <label class="switch">
                                                    <input type="radio" name="switch-radio1" value="2">
                                                    <span>举报</span>
                                                </label>
                                                <label class="switch">
                                                    <input type="radio" name="switch-radio1" value="3">
                                                    <span>侵权</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>请输入可以联系您的电子邮箱</label>
                                            <input type="email" class="form-control" placeholder="E-mail">
                                        </div>
                                        <div class="form-group">
                                            <label>添加详细信息</label>
                                            <textarea class="form-control" placeholder="您的反馈信息" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button class="btn btn-success pull-right">提交反馈</button>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>